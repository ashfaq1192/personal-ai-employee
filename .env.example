# =============================================================================
# Personal AI Employee — Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to version control!
# =============================================================================

# --- Vault ---
# Path to the Obsidian vault (separate from project repo)
VAULT_PATH=~/AI_Employee_Vault

# --- Safety Modes ---
# DEV_MODE=true: No external reads or writes (mock data, no API calls)
# DRY_RUN=true: External reads OK, but writes are logged-only (no emails sent, etc.)
# DEV_MODE=true implies DRY_RUN=true regardless of DRY_RUN setting
DEV_MODE=true
DRY_RUN=true

# --- Gmail API (Bronze tier) ---
# Obtain from Google Cloud Console → APIs & Services → Credentials → OAuth 2.0 Client ID
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_CREDENTIALS_PATH=~/.config/ai-employee/gmail_credentials.json

# --- WhatsApp (Bronze tier) ---
# Playwright persistent session directory (auto-created on first QR scan)
WHATSAPP_SESSION_PATH=~/.config/ai-employee/whatsapp-session

# --- LinkedIn (Silver tier) ---
# Obtain from LinkedIn Developer Portal → My Apps → Auth
LINKEDIN_ACCESS_TOKEN=

# --- Meta / Facebook + Instagram (Gold tier) ---
# Obtain from Meta for Developers → My Apps → Settings → Basic
META_ACCESS_TOKEN=
# Your Facebook Page numeric ID (from Page → About → Page ID)
FACEBOOK_PAGE_ID=
# Your Instagram Business Account numeric ID (from Meta Business Suite → Instagram account)
INSTAGRAM_USER_ID=

# --- Twitter/X (Gold tier) ---
# Obtain from X Developer Portal → Projects & Apps → Keys and tokens
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# --- Odoo ERP (Gold tier) ---
# Local Docker: docker compose up -d odoo  → ODOO_URL=http://localhost:8069
# Cloud (Platinum): use your GCP VM HTTPS URL
ODOO_URL=http://localhost:8069
ODOO_DB=odoo
ODOO_USERNAME=admin
ODOO_PASSWORD=admin

# --- Platinum: Cloud Agent ---
# Used in claim-by-move rule to distinguish cloud from local agent
AGENT_NAME=local

# --- Rate Limits ---
RATE_LIMIT_EMAILS_PER_HOUR=10
RATE_LIMIT_PAYMENTS_PER_HOUR=3
RATE_LIMIT_SOCIAL_PER_HOUR=5

# --- Claude Code ---
# Timeout for Claude CLI invocations (milliseconds)
CLAUDE_TIMEOUT=300000

# --- Ralph Wiggum ---
# Threshold of pending items to trigger batch Ralph loop instead of single-shot
RALPH_BATCH_THRESHOLD=3
